@import "nib"
@import "normalize.styl"

/***	Fuentes 	***/
@font-face 
	font-family: 'icons';
	src:url('../fonts/icomoon.eot?jwgjtr');
	src:url('../fonts/icomoon.eot?#iefixjwgjtr') format('embedded-opentype'),
		url('../fonts/icomoon.woff?jwgjtr') format('woff'),
		url('../fonts/icomoon.ttf?jwgjtr') format('truetype'),
		url('../fonts/icomoon.svg?jwgjtr#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
	
/***	Mixins		***/
icomoon-font(color,icon,size)
	font-family 'icons'
	color color
	content icon
	font-size size
	vertical-align bottom
font(size,color,type)
	color color
	font-size size
	font-weight type
	
/*** 	clases de inconos 	***/
.icon-location:before
	icomoon-font(#FFF,'\e601',1.3em)
.icon-mobile:before
	icomoon-font(#FFF,'\e602',1.3em)
.icon-phone:before
	icomoon-font(#FFF,'\e600',1.3em)
	
/*** 	clases generales 	***/
.contenido_centrado
	margin 0 auto
	width 70%
.float_center
	margin 0 auto
.float_left
	float left
.float_right
	float right
.justificado
	text-align justify
.posicion_fija 
	position fixed
.texto_centrado
	text-align center

