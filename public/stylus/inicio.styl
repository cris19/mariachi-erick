@import "nib"
@import "normalize.styl"

/***	Fuentes 	***/
@font-face 
	font-family: 'icons';
	src:url('../fonts/icomoon.eot?jwgjtr');
	src:url('../fonts/icomoon.eot?#iefixjwgjtr') format('embedded-opentype'),
		url('../fonts/icomoon.woff?jwgjtr') format('woff'),
		url('../fonts/icomoon.ttf?jwgjtr') format('truetype'),
		url('../fonts/icomoon.svg?jwgjtr#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
	
/***	Mixins		***/
icomoon-font(color,icon,size)
	font-family 'icons'
	color color
	content icon
	font-size size
	vertical-align bottom
	
/*** 	clases de inconos 	***/
.icon-location:before
	icomoon-font(#FFF,'\e601',1.3em)
.icon-mobile:before
	icomoon-font(#FFF,'\e602',1.3em)
.icon-phone:before
	icomoon-font(#FFF,'\e600',1.3em)
	
/*** 	clases generales 	***/
.posicion_fija 
	position fixed
.texto_centrado
	text-align center
	
html
	background url(../img/background_mariachi.jpg) no-repeat center center fixed
	background-size cover
#contenedor
	background #FFF
	height 500px
	position relative
	z-index 200
#presentacion
	background rgba(0,0,0,.6)
	color #FFF
	overflow hidden
	position fixed
	z-index 100
	&-contacto
		bottom 20px
		overflow hidden
		padding 0 5%
		position absolute
		width 90%
		>*
			display inline-block
		&-direccion
			float right
		&-telefonos
			float left
			ul
				list-style none
				padding 0
				li
					margin-top .5em
	&-frase
		font-size 1.2em
		margin 40px auto 0 !important
		width 50%
	&-titulo
		font-size 4em
		margin-top 4.3em
		text-shadow 2px 2px #000
	